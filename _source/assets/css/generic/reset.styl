//Eric Meyer Reset
global-reset()

*
	box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  margin 0
  padding 0

html, body
	height 100%

body
	font-family $basic-font
  font-weight normal
	set-font-size(16px)

a
	outline 0
	text-decoration none

li
	list-style none

strong
	font-weight bold

section
	display inline-block
